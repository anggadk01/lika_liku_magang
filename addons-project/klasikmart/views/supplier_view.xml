<?xml version="1.0" encoding="utf-8"?>
<odoo>

<!-- klasikmart.supplier tree view -->
<record id="klasikmart_supplier_view_tree" model="ir.ui.view">
    <field name="name">Daftar Supplier</field>
    <field name="model">klasikmart.supplier</field>
    <field name="arch" type="xml">
        <tree>
            <field name="name"/>
            <field name="alamat"/>
            <field name="no_telp"/>
            <field name="barang_id"/>            
        </tree>
    </field>
</record>

<!-- klasikmart.supplier form view -->
<record id="klasikmart_supplier_view_form" model="ir.ui.view">
    <field name="name">Form Supplier</field>
    <field name="model">klasikmart.supplier</field>
    <field name="arch" type="xml">
        <form string="">
            <sheet>
                <group>
                    <field name="name"/>
                    <field name="alamat"/>
                    <field name="no_telp"/>        
                </group>
                <group name="barang" string="Barang">
                    <field name="barang_id"/>
                </group>
            </sheet>
        </form>
    </field>
</record>

<!-- klasikmart.supplier action window -->
<record id="klasikmart_supplier_action" model="ir.actions.act_window">
    <field name="name">Daftar Supplier</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">klasikmart.supplier</field>
    <field name="view_mode">tree,form</field>
</record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="klasikmart_supplier_menu_act" 
            name="Supplier" 
            parent="klasikmart_menu_root" 
            action="klasikmart_supplier_action" 
            sequence="40"/>

</odoo>
